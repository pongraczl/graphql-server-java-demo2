type Query {
    somebodyById(id: ID!): Creature
    allHumans: [Creature]!
    allZombies: [Creature]!
    everyBody: [Creature]!
}

type Mutation {
    startZombieApocalypse: String
    addHumans(humans: [HumanInput!]): [Creature]
    addZombies(count: Int): [Creature]
}

type Creature {
    id: ID
    name: String
    profession: String
    lifeStatus: LifeStatus!
}

enum LifeStatus {
    ALIVE
    LIVING_DEAD
    REALLY_DEAD
}

input HumanInput {
    name: String
    profession: String
}